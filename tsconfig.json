{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "./built",
    "allowJs": true,
    "downlevelIteration": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2020.bigint"
    ]
  },
  "exclude": [
    "node_modules",
    "./lib/templates",
    "bundler"
  ],
  "include": [
    "./lib/**/*",
    "start.ts"
  ]
}
